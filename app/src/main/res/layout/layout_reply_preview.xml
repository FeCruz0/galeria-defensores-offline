    android:backgroundTint="#F3F4F6"
    android:padding="8dp"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/text_reply_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
