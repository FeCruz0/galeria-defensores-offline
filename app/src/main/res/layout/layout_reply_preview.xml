        android:textSize="11sp"
        tools:text="Respondendo a Fulano" />

    <TextView
        android:id="@+id/text_reply_preview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4B5563"
