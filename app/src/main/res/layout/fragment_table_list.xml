<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
    android:id="@+id/tv_table_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Mesas de Jogo"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/text_primary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/btn_settings"
    app:layout_constraintTop_toTopOf="@+id/btn_settings"
    app:layout_constraintBottom_toBottomOf="@+id/btn_settings"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tables"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_table_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB Menu Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile FAB (Sub-menu) -->
        <LinearLayout
            android:id="@+id/layout_fab_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/text_primary"
                android:background="@color/card_background"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_circle"
                app:fabSize="mini"
                app:backgroundTint="?attr/colorSurface"
                app:tint="?attr/colorControlNormal" />
        </LinearLayout>

        <!-- Settings FAB (Sub-menu) -->
        <LinearLayout
            android:id="@+id/layout_fab_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configurações"
                android:textColor="@color/text_primary"
                android:background="@color/card_background"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_gear"
                app:fabSize="mini"
                app:backgroundTint="?attr/colorSurface"
                app:tint="?attr/colorControlNormal" />
        </LinearLayout>

        <!-- Create Table FAB (Sub-menu) -->
        <LinearLayout
            android:id="@+id/layout_fab_create_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Mesa"
                android:textColor="@color/text_primary"
                android:background="@color/card_background"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_create_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add"
                app:fabSize="mini" />
        </LinearLayout>

        <!-- Main FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            app:backgroundTint="?attr/colorPrimary"
            app:tint="#FFFFFF" />
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
