<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_background"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3D&amp;T ALPHA"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FECACA" />
        </LinearLayout>

        <!-- Character Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/img_character_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle_button" 
                    android:clipToOutline="true"/>
                
                <ImageView
                    android:id="@+id/img_edit_avatar_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@drawable/bg_circle_button"
                    android:backgroundTint="#2196F3"
                    android:padding="6dp"
                    app:tint="#FFFFFF"
                    android:elevation="4dp"/>
            </FrameLayout>

            <EditText
                android:id="@+id/edit_char_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Personagem"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="@null"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- New Stats Row: Score, Saved Points, XP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <!-- Score (Calculated) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_border"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PONTUAÇÃO"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />
                    <TextView
                        android:id="@+id/text_score_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Saved Points (Editable) -->
                <LinearLayout
                    android:id="@+id/layout_saved_points"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_border"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GUARDADOS"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:layout_marginBottom="4dp"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/btn_minus_saved"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="#E5E7EB"
                            android:textColor="#000000"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                            
                        <TextView
                            android:id="@+id/text_saved_points"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/btn_plus_saved"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="#E5E7EB"
                            android:textColor="#000000"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Experience (Editable) -->
                <LinearLayout
                    android:id="@+id/layout_experience"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_border"
                    android:padding="8dp"
                    android:layout_marginStart="4dp">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPERIÊNCIA"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:layout_marginBottom="4dp"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/btn_minus_xp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="#E5E7EB"
                            android:textColor="#000000"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <TextView
                            android:id="@+id/text_experience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/btn_plus_xp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="#E5E7EB"
                            android:textColor="#000000"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personagem Oculto (Apenas Mestre)"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Attributes -->
            <!-- Attributes & Damage Types -->
            <!-- Force Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_forca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_rounded_border"
                    android:padding="8dp"
                    android:gravity="center">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TIPO DE DANO"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#888888" />
                        
                         <ImageButton
                            android:id="@+id/btn_manage_damage_types"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_preferences"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/text_primary"
                            android:visibility="gone"
                            android:contentDescription="Gerenciar" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinner_damage_forca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" 
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Habilidade Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_habilidade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Resistencia Row -->
            <!-- Resistencia Row + PV -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_resistencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                
                <include layout="@layout/view_status_compact"
                    android:id="@+id/status_pv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Armadura Row + PM -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_armadura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />

                <include layout="@layout/view_status_compact"
                    android:id="@+id/status_pm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- PdF Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_pdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_rounded_border"
                    android:padding="8dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TIPO DE DANO"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />

                    <Spinner
                        android:id="@+id/spinner_damage_pdf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" 
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <!-- Combat Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMBATE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/btn_attack_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATACAR (F)"
                android:backgroundTint="#DC2626"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />
            <Button
                android:id="@+id/btn_attack_pdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATACAR (PdF)"
                android:backgroundTint="#7C3AED"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_defense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEFENDER"
            android:backgroundTint="#059669"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Roll Result -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_roll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1F2937"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_roll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATAQUE (F)"
                    android:textColor="#9CA3AF"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_roll_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/text_roll_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H(3) + F(2) + 1d6(5)"
                    android:textColor="#D1D5DB" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Unique Advantage (Race) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VANTAGEM ÚNICA"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <include layout="@layout/item_unique_advantage"
            android:id="@+id/card_unique_advantage"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_select_ua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecionar Vantagem Única"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Vantagens -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VANTAGENS"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_advantages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_advantage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Vantagem"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Desvantagens -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESVANTAGENS"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_disadvantages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_disadvantage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Desvantagem"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Perícias -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERÍCIAS"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Perícia"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Especializações -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESPECIALIZAÇÕES"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_specializations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Especialização"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Magias -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAGIAS"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_spells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_spell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Magia"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:visibility="gone" />

        <!-- Inventário -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVENTÁRIO"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Item"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Anotações -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANOTAÇÕES"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="6"
            android:gravity="top|start"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:hint="Escreva suas anotações aqui..."
            android:textColor="@color/notes_text"
            android:textColorHint="#9CA3AF"
            android:textSize="16sp"
            android:inputType="textMultiLine|textCapSentences" />

        <Button
            android:id="@+id/btn_delete_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir Ficha"
            android:backgroundTint="#EF4444"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp" />

    </LinearLayout>
</ScrollView>
