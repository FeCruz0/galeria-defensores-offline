<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_background"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3D&amp;T ALPHA"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FECACA" />
        </LinearLayout>

        <!-- Character Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/edit_char_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Personagem"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="@null"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/check_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personagem Oculto (Apenas Mestre)"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Attributes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_forca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_habilidade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_resistencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_armadura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">
                <include layout="@layout/view_attribute_input"
                    android:id="@+id/attr_pdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Status Bars -->
            <include layout="@layout/view_status_manager"
                android:id="@+id/status_pv"
                android:layout_marginBottom="16dp" />
            <include layout="@layout/view_status_manager"
                android:id="@+id/status_pm"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Combat Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMBATE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/btn_attack_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATACAR (F)"
                android:backgroundTint="#DC2626"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />
            <Button
                android:id="@+id/btn_attack_pdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATACAR (PdF)"
                android:backgroundTint="#7C3AED"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_defense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEFENDER"
            android:backgroundTint="#059669"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Roll Result -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_roll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1F2937"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_roll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATAQUE (F)"
                    android:textColor="#9CA3AF"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_roll_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/text_roll_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H(3) + F(2) + 1d6(5)"
                    android:textColor="#D1D5DB" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vantagens -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VANTAGENS"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_advantages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_advantage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Vantagem"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Desvantagens -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESVANTAGENS"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_disadvantages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_add_disadvantage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Desvantagem"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Inventory & Notes -->
        <Button
            android:id="@+id/btn_manage_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventário"
            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anotações"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>
</ScrollView>
