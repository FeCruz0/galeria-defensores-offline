<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root_dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <TextView
        android:id="@+id/text_roll_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arraste e Jogue o Dado!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"/>

    <com.galeria.defensores.ui.views.DiceBoardView
        android:id="@+id/dice_board_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_cancel_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#EF4444"
        android:textColor="@color/white"/>

</FrameLayout>
